@model ITSearch.Models.ViewModels.GeneralViewModel
@{
    ViewData["Title"] = "Index";
}



<h1>General Information</h1>
<h3>Forgot how to do something? No worries.</h3>

<p>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Procedures">Add New</a>
</p>

<form asp-controller="Procedures" asp-action="search" method="post">
    <div class="input-group mb-3">
        <input id="searchTerm" asp-for="NewSearch.SearchText" asp-action="search" asp-controller="Procedures"
               type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm" placeholder="search here:">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </div>
</form>

<table id="procedureTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Procedure.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procedure.Action)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procedure.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Procedures)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Action)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td class="btn-group">
                @*<span>*@
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-controller="Procedures" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Procedures" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Procedures" asp-route-id="@item.Id">Delete</a>
                @*</span>*@
            </td>
        </tr>
        }
    </tbody>
</table>


@section scripts
    {
    <script>
        $('#procedureTable').dataTable({
            "processing": true
        });
    </script>
}